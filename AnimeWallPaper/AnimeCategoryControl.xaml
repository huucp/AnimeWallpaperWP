<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ViewModels="clr-namespace:AnimeWallPaper.ViewModels" x:Class="AnimeWallPaper.AnimeCategoryControl"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480" Width="216" Height="144" Margin="0,0,0,10">
	<UserControl.DataContext>
		<ViewModels:AnimeCategoryControlViewModel/>
	</UserControl.DataContext>
    
	<Grid x:Name="LayoutRoot">
        <Image Margin="0" Stretch="UniformToFill" Source="{Binding ImageSource}"/>
		<Border Name="Border1" BorderBrush="Black" BorderThickness="0" Margin="0" VerticalAlignment="Bottom" Height="36" Background="Black" Opacity="0.5">
			<TextBlock Margin="0"  Text="{Binding Name}" TextWrapping="Wrap" FontSize="20"
                       Foreground="White" TextTrimming="WordEllipsis" HorizontalAlignment="Center" />
		</Border>					
	</Grid>
</UserControl>