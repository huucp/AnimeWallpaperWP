<UserControl x:Class="AnimeWallPaper.SearchControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480" Height="70">
    
    <Grid x:Name="LayoutRoot" Background="Transparent">
        <TextBox HorizontalAlignment="Stretch" BorderThickness="1" BorderBrush="#FFDBDADA" 
                 Background="#FFEDEDED" SelectionBackground="LightBlue"
                 Name="InputBox" Text="Search" Foreground="DarkGray"
                 KeyUp="InputBox_OnKeyUp" GotFocus="InputBox_OnGotFocus" LostFocus="InputBox_OnLostFocus"  TextChanged="InputBox_OnTextChanged" InputScope="Search"/>
        <Image HorizontalAlignment="Right" Height="30" Margin="0,0,20,0" VerticalAlignment="Center" Width="30" Source="/Assets/close button.png" RenderTransformOrigin="0.535,0.865" MouseLeftButtonDown="EmptySearch_OnMouseLeftButtonDown"/>
    </Grid>
</UserControl>