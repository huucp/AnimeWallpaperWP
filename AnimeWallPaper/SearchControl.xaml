<UserControl x:Class="AnimeWallPaper.SearchControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480" Height="80">
    
    <Grid x:Name="LayoutRoot" Background="Transparent">
        <TextBox HorizontalAlignment="Stretch" BorderThickness="1" BorderBrush="Black" 
                 Background="White" Opacity="0.3" SelectionBackground="LightBlue"
                 KeyUp="InputBox_OnKeyUp" Name="InputBox"/>
    </Grid>
</UserControl>